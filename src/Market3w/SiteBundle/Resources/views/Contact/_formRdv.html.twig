{% block stylesheets %}
            {% stylesheets 
                'bundles/market3wsite/css/jquery-ui.min.css'
                'bundles/market3wsite/css/jquery-ui.structure.min.css' 
                output='jquery-ui.css' filter='cssrewrite' %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}
        {% block javascripts %}
            {% javascripts 
                'bundles/market3wsite/js/jquery-ui-1.11.0-custom.min.js'
                'bundles/market3wsite/js/appointment.js'
                output='appointment.js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}

{{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="contact_form">
        <div class="contact_element">
            {{ form_label(form.subject) }}
            {{ form_errors(form.subject) }}
            {{ form_widget(form.subject) }}
        </div>

        <div class="contact_element">
            {{ form_label(form.type) }}
            {{ form_errors(form.type) }}
            {{ form_widget(form.type) }}
        </div>
        
        <div class="contact_element">
            {{ form_errors(form.address) }}
            {{ form_widget(form.address) }}
        </div>
        
        <div  class="contact_element" id="skype">
            {{ form_label(form.skype) }}
            {{ form_errors(form.skype) }}
            {{ form_widget(form.skype) }}
        </div>
        
        <div class="contact_element">
            {{ form_errors(form.date) }}
            {{ form_widget(form.date) }}
        </div>
        
        <div class="contact_element">
            {{ form_errors(form.hour) }}
            {{ form_widget(form.hour) }}
        </div>

        <input class="submit" type="submit" />
    </div>

{{ form_end(form) }}

