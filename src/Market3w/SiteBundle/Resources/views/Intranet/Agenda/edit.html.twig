{% extends 'Market3wSiteBundle::backendLayout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets 
        'bundles/market3wsite/js/appointment.js'
        'bundles/market3wsite/css/jquery-ui.min.css'
        'bundles/market3wsite/css/jquery-ui.structure.min.css' 
        output='jquery-ui.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts 
    'bundles/market3wsite/js/jquery-ui-1.11.0-custom.min.js'
    'bundles/market3wsite/js/appointment.js'
    output='appointment.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
    <div class="fixed_content">
        <a class="intranet_button" href="{{ path( 'agenda_show_appointment', {'id':app.request.get('id')}) }}">Retour</a>
    </div>
    <div class="agenda_content">
        <div class="inscription_field">
            <div class="fixed_content">
                <h1>Modification de l'agenda</h1>
                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="inscription_item form_type">
                    {{ form_label(form.subject) }}
                    {{ form_errors(form.subject) }}
                    {{ form_widget(form.subject) }}
                </div>
                <br>
                <div class="inscription_item form_type">
                    {{ form_label(form.type) }}
                    {{ form_errors(form.type) }}
                    {{ form_widget(form.type) }}
                </div>
                <br>
                <div class="inscription_item" id="address">
                    {{ form_errors(form.address) }}
                    {{ form_widget(form.address) }}
                </div>

                <div class="inscription_item" id="skype">
                    {{ form_label(form.skype) }}
                    {{ form_errors(form.skype) }}
                    {{ form_widget(form.skype) }}
                </div>
                <br>
                <div class="inscription_item">
                    {{ form_errors(form.date) }}
                    {{ form_widget(form.date) }}
                </div>
                <br>
                <div class="inscription_item">
                    {{ form_errors(form.hour) }}
                    {{ form_widget(form.hour) }}
                </div>
                <br>
                <input class="submit" type="submit" />
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}