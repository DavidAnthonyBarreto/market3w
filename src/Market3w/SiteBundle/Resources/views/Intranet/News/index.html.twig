{% extends 'Market3wSiteBundle::backendLayout.html.twig' %}

{% block content %}
<div class="fixed_content">
    <h1>Liste des News</h1>
    <table class="table_info">
        <thead>
            <th> Date de publication</th>
            <th> Titre de la News</th>
            <th> Aperçu du contenu</th>
            <th> Voir la news</th>
        </thead>
        <tbody>
            {% for oneNews in news %}
                <tr>
                    <td><span class="libelle_table">Date de publication : </span> {{oneNews.pubDate|date('d/m/Y')}} </td>
                    <td><span class="libelle_table">Titre de la News : </span> {{oneNews.title}} </td>
                    <td><span class="libelle_table">Aperçu du contenu : </span> {{oneNews.description|slice(0, 120)}}...</td>
                    <td><span class="libelle_table">Voir la news : </span>
                        <a class="intranet_button" href="{{ path( 'news_show',{"id":oneNews.id} ) }}"> Voir </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}