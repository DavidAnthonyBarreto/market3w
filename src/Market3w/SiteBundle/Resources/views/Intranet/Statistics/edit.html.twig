{% extends 'Market3wSiteBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets 
        'bundles/market3wsite/css/jquery-ui.min.css'
        'bundles/market3wsite/css/jquery-ui.structure.min.css' 
        output='jquery-ui.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts 
        'bundles/market3wsite/js/jquery-ui-1.11.0-custom.min.js'
        'bundles/market3wsite/js/appointment.js'
        output='appointment.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
        {{ form_errors(form) }}

        <div>
            {{ form_label(form.rank) }}
            {{ form_errors(form.rank) }}
            {{ form_widget(form.rank) }}
        </div>

        <div>
            {{ form_label(form.keywords) }}
            {{ form_errors(form.keywords) }}
            {{ form_widget(form.keywords) }}
        </div>

        <div>
            {{ form_label(form.nbViewedPage) }}
            {{ form_errors(form.nbViewedPage) }}
            {{ form_widget(form.nbViewedPage) }}
        </div>

        <div>
            {{ form_label(form.uniqueVisitors) }}
            {{ form_errors(form.uniqueVisitors) }}
            {{ form_widget(form.uniqueVisitors) }}
        </div>

        <div>
            {{ form_label(form.topViewed) }}
            {{ form_errors(form.topViewed) }}
            {{ form_widget(form.topViewed) }}
        </div>

        <input type="submit" />

    {{ form_end(form) }}
{% endblock %}