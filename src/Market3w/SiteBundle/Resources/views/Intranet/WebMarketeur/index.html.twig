{% extends 'Market3wSiteBundle::layout.html.twig' %}

{% block content %}
<div class="fixed_content">
    <ul>
    {% for client in clients %}
        <a href="{{ path( 'client_show', {'id':client.id} ) }}">
            <li class="nb-client">
                <span class="company">   {{ client.company.name }} : </span>
                <span class="lastname">  {{ client.lastName     }} </span>
                <span class="firstname"> {{ client.firstName    }} </span>
            </li>
        </a>
    {% endfor %}
    </ul>
</div>
{% endblock %}