{% trans_default_domain 'FOSUserBundle' %}

<div class="inscription_field">
	<div class="fixed_content">
		<h1>Formulaire d'inscription</h1>
		<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">

				<div class="inscription_item">
				{{ form_label(form.username) }}
		        {{ form_errors(form.username) }}
		        {{ form_widget(form.username) }}
		        </div>
		        <div class="inscription_item">
		        {{ form_label(form.email) }}
		        {{ form_errors(form.email) }}
		        {{ form_widget(form.email) }}
		        </div>
		        <div class="inscription_item">
		        {{ form_label(form.plainPassword.first) }}
		        {{ form_errors(form.plainPassword.first) }}
		        {{ form_widget(form.plainPassword.first) }}
		        </div>
		        <div class="inscription_item">
		        {{ form_label(form.plainPassword.second) }}
		        {{ form_errors(form.plainPassword.second) }}
		        {{ form_widget(form.plainPassword.second) }}
		        </div>
		        <div class="inscription_item">
		        {{ form_label(form.lastName) }}
		        {{ form_errors(form.lastName) }}
		        {{ form_widget(form.lastName) }}
		        </div>
		        <div class="inscription_item">
		        {{ form_label(form.firstName) }}
		        {{ form_errors(form.firstName) }}
		        {{ form_widget(form.firstName) }}
		        </div>
		        <div class="inscription_item">
		        {{ form_label(form.phoneNumber) }}
		        {{ form_errors(form.phoneNumber) }}
		        {{ form_widget(form.phoneNumber) }}
		        </div>
		        <div class="inscription_item">
		        {{ form_label(form.mobilePhoneNumber) }}
		        {{ form_errors(form.mobilePhoneNumber) }}
		        {{ form_widget(form.mobilePhoneNumber) }}
		        </div>
		        <div class="inscription_item">
		        {{ form_label(form.company) }}
		        {{ form_errors(form.company) }}
		        {{ form_widget(form.company) }}
		        </div>
		        {{ form_row(form._token) }}




		    <div>
		        <input class="submit" type="submit" value="{{ 'registration.submit'|trans }}" />
		    </div>
		</form>
	</div>
</div>